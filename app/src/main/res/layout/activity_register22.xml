<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register22">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Name: "
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="Gender: "
        android:textColor="@color/black"
        android:textSize="22dp"
        />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_below="@+id/tv_gender"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="63dp"
        android:gravity="center"
        android:text="Age: "
        android:textColor="@color/black"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_age"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="Email: "
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_email"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:text="Password: "
        android:textColor="@color/black"
        android:textSize="22dp"
        />

    <TextView
        android:id="@+id/tv_pw2"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_pw"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="30dp"
        android:gravity="left"
        android:text="Confirm \npassword: "
        android:textColor="@color/black"
        android:textSize="22dp"
        />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@id/tv_name"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <RadioGroup
        android:id="@+id/radiogrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_gender"
        android:layout_marginLeft="45dp"
        android:layout_below="@id/edit_name"
        android:layout_marginTop="20dp">

        <RadioButton
            android:id="@+id/bt_male"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Male"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/bt_female"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Female"
            android:textSize="15dp" />


        <RadioButton
            android:id="@+id/bt_other"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Other"
            android:textSize="15dp" />
    </RadioGroup>

    <EditText
        android:id="@+id/edit_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/radiogrp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/tv_age"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/edit_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_age"
        android:layout_marginLeft="75dp"
        android:layout_below="@id/edit_age"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_mail"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/tv_pw"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_password"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/tv_pw2"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        />

    <Button
        android:id="@+id/edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_pw2"
        android:layout_marginTop="23dp"
        android:backgroundTint="@color/teal_200"
        android:text="Register"
        />

    <Button
        android:id="@+id/create_btt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_button"
        android:layout_marginTop="22dp"
        android:layout_toRightOf="@+id/already"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/teal_200" />

    <TextView
        android:id="@+id/already"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@id/edit_button"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="Already registered?"
        android:textColor="@color/black"
        android:textSize="18dp" />


</RelativeLayout>